<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Balance</th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%=h account.name %></td>
    <td><%=h account.balance %></td>
    <td><%= link_to t('accounts.add_transaction'), new_account_transaction_path(account) %></td>
    <td><%= link_to 'Show', account %></td>
    <td><%= link_to 'Edit', edit_account_path(account) %></td>
    <td><%= link_to 'Destroy', account, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New account', new_account_path %> - <%= link_to 'transfer', transfer_new_transaction_url %>