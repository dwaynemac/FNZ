<style>
  .css1 { font-size: 10px; }
  .css2 { font-size: 16px; }
  .css3 { font-size: 24px; }
  .css4 { font-size: 32px; }
</style>
<div>
  <h2>Incomes</h2>
  <% tag_cloud(@income_concepts, %w(css1 css2 css3 css4)) do |tag, css_class| %>
    <%= link_to tag, concept_path(:id => tag.name), :class => css_class %>
  <% end %>
  <h2>Expenses</h2>
  <% tag_cloud(@expense_concepts, %w(css1 css2 css3 css4)) do |tag, css_class| %>
    <%= link_to tag, concept_path(:id => tag.name), :class => css_class %>
  <% end %>
</div>