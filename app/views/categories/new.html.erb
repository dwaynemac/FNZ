<h1><%= t('categories.new') %><%= " #{t('categories.under')} #{h(@parent.name)}"if @parent %></h1>

<%- semantic_form_for(@category) do |f| -%>

  <%= f.error_messages %>

  <%- f.inputs do -%>
    <%= f.input :name %>
    <%= f.input(:parent_id, :as => :hidden) %>
  <%- end -%>

  <%- f.buttons do -%>
    <%= f.commit_button %>
  <%- end -%>
<%- end -%>

<%= link_to 'Back', categories_path %>