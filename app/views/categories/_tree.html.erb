<%- if category.children.empty? -%>
  <li><%= render :partial => 'li', :locals => { :category => category } %></li>
<%- else -%>
  <li><%= render :partial => 'li', :locals => { :category => category } %></li>
  <ul>
    <%- category.children.each do |child| -%>
      <%= render :partial => 'tree', :locals => {:category => child} %>
    <%- end -%>
  </ul>
<%- end -%>
