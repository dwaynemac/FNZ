<h1>New transfer</h1>

<%- semantic_form_for @transfer_form, :url => transfer_new_transaction_url, :method => :post do |f| -%>
  <%= f.error_messages %>
  <%- f.inputs do -%>
    <%= f.input :from_account_id, :collection => @accounts.map{|a|[a.name,a.id]} %>
    <%= f.input :to_account_id, :collection => @accounts.map{|a|[a.name,a.id]} %>
    <%= f.input :amount, :as => :string %>
    <%= f.input :description, :as => :string %>
  <%- end -%>
  <%- f.buttons do -%>
    <%= f.commit_button %>
  <%- end -%>
<%- end -%>

<%= link_to t('Back'), transactions_path %>