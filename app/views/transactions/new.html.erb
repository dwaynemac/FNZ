<h1>New transaction</h1>

<%-
  if params[:account_id]
    scope = [:account, @transaction]
  elsif params[:person_id]
    scope = [:person, @transaction]
  else
    scope = @transaction
  end
-%>

<%- semantic_form_for scope do |f| -%>
  <%= render :partial => 'form', :locals => {:f => f} %>
  <%- f.buttons do -%>
    <%= f.commit_button %>
  <%- end -%>
<%- end -%>


<%= link_to 'Back', transactions_path %>