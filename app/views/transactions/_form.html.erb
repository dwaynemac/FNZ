<%= f.error_messages %>
<%- f.inputs do -%>
  <%= f.input( :account_id, :collection => current_user.school.accounts) unless params[:account_id] %>
  <%= f.input :type, :collection => %W( Income Expense ) %>
  <%= f.input :amount %>
  <%= f.input :description %>
  <%= f.input :made_on %>
  <%= f.input :user_id, :as => :hidden, :value => current_user.id %>
<%- end -%>
<%- f.buttons do -%>
  <%= f.commit_button %>
<%- end -%>
