<h1>Listing transactions</h1>

<table>
  <tr>
    <th>Cents</th>
    <th>Currency</th>
    <th>Description</th>
    <th>User</th>
    <th>Account</th>
    <th>Type</th>
  </tr>

<% @transactions.each do |transaction| %>
  <tr>
    <td><%=h transaction.cents %></td>
    <td><%=h transaction.currency %></td>
    <td><%=h transaction.description %></td>
    <td><%=h transaction.user_id %></td>
    <td><%=h transaction.account_id %></td>
    <td><%=h transaction.type %></td>
    <td><%= link_to 'Show', transaction %></td>
    <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
    <td><%= link_to 'Destroy', transaction, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New transaction', new_transaction_path %>